<?php	/**	 *	admin_index	 *	Will display the whole list of available icons with their corresponding codes.	 *	Submitting the form will regenerate the whole list	 **/	$this->set('pageCssId', 'iconIndex');	echo $this->Fastcode->message(		$this->Fastcode->p(			sprintf(				__d('caracole_icons', 'You can display this icons in your views using %1$s.', true),				'$this->Fastcode->icon(iconName)'			)		).		$this->Fastcode->p(			sprintf(				__d('caracole_icons', 'You can add new icons to the set by copying your icon files to %1$s.', true),				'app/webroot/img/icons'			)		).		$this->Fastcode->p(			__d('caracole_icons', 'Just submit this form to regenerate the CSS Sprite file and the corresponding CSS file', true)		),		'information'	);	// Starting the form	echo $this->Form->create(null, array('class' => 'editForm niceForm'));	// Displaying the list of icons	echo $this->Html->tag('ul', null, array('class' => 'iconList'));	foreach($iconList as $iconName => $iconPath) {		//Icon and hidden field		echo $this->Html->tag('li', $this->Fastcode->icon($iconName).$iconName.$this->Form->hidden($iconName, array('value' => $iconPath)));	}	echo '</ul>';	// Submit button	echo $this->Fastcode->div(		$this->Fastcode->button(			__d('caracole_icons', 'Generate', true),			array(				'icon' => 'valid',				'type' => 'submit'			)		),		'submit'	);	echo $this->Form->end();